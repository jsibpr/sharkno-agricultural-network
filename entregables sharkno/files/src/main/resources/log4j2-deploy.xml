<?xml version="1.0" encoding="UTF-8"?>
<Configuration level="INFO" monitorInterval="30">
    <Properties>
        <!-- Patterns documentation https://www.tutorialspoint.com/log4j/log4j_patternlayout.htm-->
        <Property name="LOG_PATTERN">[%d{HH:mm:ss}] %-5level %logger{36}->%method - %msg%n%throwable</Property>
        <Property name="LOG_EXAMPLE2_PATTERN">[%d{ISO8601}] %-5level %t [%logger.%method] (%C{1.}) %msg%n%throwable</Property>
        <Property name="LOG_EXAMPLE1_PATTERN">[%d %-5level].oOo.  %logger -> %method : %msg%n</Property>
        <Property name="LOG_DEFAULT_PATTERN">%d [%t] %-5level %logger{36} - %msg%n%throwable</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}" />
        </Console>
    </Appenders>
    <Loggers>
        <!-- Custom logs levels https://logging.apache.org/log4j/2.x/manual/customloglevels.html-->
        <Logger name="org.apache.logging.log4j2" level="ERROR" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.module.files" level="INFO" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Root level="ERROR">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>